@using sobee_core.Models.AnalyticsModels
@model List<InactiveUserViewModel>

<table class="table table-responsive-sm table-hover table-outline mb-0">
    <thead class="thead-light">
        <tr>
            <th>User</th>
            <th>Email</th>
            <th>Last Login</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model) {
            <tr>
                <td>
                    <div>@user.FirstName @user.LastName</div>
                </td>
                <td>
                    <div>@user.Email</div>
                </td>
                <td>
                    <div class="small text-muted">Last login</div>
                    <strong>@(user.LastLoginDate.HasValue ? user.LastLoginDate.Value.ToString("MMM d, yyyy") : "Never")</strong>
                </td>
                <td>
                    <button class="btn btn-primary send-discount-email" data-user-id="@user.Id">Send Discount Email</button>
                </td>
            </tr>
        }
    </tbody>
</table>