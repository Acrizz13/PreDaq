<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SobeeYou</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/SobeeYou.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/SobeeYou.styles.css" asp-append-version="true" />
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">


	<link rel="stylesheet" href="~/css/LayoutStyles.css" asp-append-version="true" /> <!-- Include the stylesheet for this page-->

	<script src="~/js/dynamicCart.js"></script> <!-- Include the JavaScript file -->



</head>
<body>
	<div class="wrapper">
		<header>
			<nav class="navbar fixed-top navbar-expand-sm navbar-custom">
				<div class="container">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarContent">
						<!-- Navigation links left -->
						<ul class="navbar-nav mb-2 mb-lg-0">
							<li class="nav-item"><a href="@Url.Action("Index", "Home")" class="nav-link">Home</a></li>
							<li>@Html.ActionLink("Story", "Index", "About", new { area = "" }, new { @class = "nav-link" })</li>
							<li>@Html.ActionLink("Shop", "Index", "Purchase", new { area = "" }, new { @class = "nav-link" })</li>
							<li>@Html.ActionLink("FAQ", "FAQ", "About", new { area = "" }, new { @class = "nav-link" })</li>
							<li>@Html.ActionLink("Contact", "Contact", "About", new { area = "" }, new { @class = "nav-link" })</li>
							<li>@Html.ActionLink("Find Us", "FindUs", "About", new { area = "" }, new { @class = "nav-link" })</li>
						</ul>

						<!-- Center logo -->
						<a href="@Url.Action("Index", "Home")" class="navbar-brand mx-auto navbar-logo-center">
							<img src="@Url.Content("~/Images/logo.png")" alt="Sobeeyou Logo" style="width: 72px; height: 50px;">
						</a>

						<!-- Right-side items (e.g., shopping cart, login links) -->
						<ul class="navbar-nav ms-auto">
			
							<partial name="_LoginPartial" class="auth_links" />
						</ul>
		
							<a href="@Url.Action("Index", "ShoppingCart")" class="nav-link">
								<i class="fas fa-shopping-cart"></i> (<span id="cartItemCount">0</span>)
							</a>

					</div>
				</div>
			</nav>
		</header>



		<!-- render sections for max width hero/background pictures-->
		@RenderSection("HeroSection", required: false)
		@RenderSection("AboutUs", required: false)
		@RenderSection("Purchase", required: false)

		<div class="container body-content">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>


		</div>


		<!-- Footer -->
		<footer class="footer" id="footer-container">
			<div class="footer-content">
				<div class="footer-column">
					<h4>GET HELP</h4>
					<ul>
						<li>@Html.ActionLink("FAQ", "FAQ", "About", new { area = "" }, new { @class = "footer-link" })</li>
						<li>@Html.ActionLink("Contact", "Contact", "About", new { area = "" }, new { @class = "footer-link" })</li>
						<li>@Html.ActionLink("Refund Policy", "RefundPolicy", "About", new { area = "" }, new { @class = "footer-link" })</li>
						<li>@Html.ActionLink("Terms of Service", "TermsOfService", "About", new { area = "" }, new { @class = "footer-link" })</li>
					</ul>
				</div>
				<div class="footer-bottom">
					<div class="footer-text">
						<p>&copy;2024 Sobee You, Inc.</p>
					</div>
					<div class="footer-links">
						<a href="#">Privacy Policy</a>
						<a href="#">Terms Of Use</a>
					</div>
				</div>
		</footer>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
