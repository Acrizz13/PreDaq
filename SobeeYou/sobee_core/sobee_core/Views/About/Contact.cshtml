@{
    ViewBag.Title = "Contact Us";
}
<style>
    <style >
    .contact-form-container {
        background-color: #18264D;
        padding: 40px; /* Padding around the form */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Subtle shadow for depth */
        margin-top: 20px; /* Some spacing from the top */
        color: white;

    }

    .form-control {
        width: 100%; /* Full width */
        margin-bottom: 15px; /* Spacing between form elements */
    }

    label {
        margin-bottom: 10px;
        color: white; /* Dark grey color for text */
        font-weight: bold; /* Make labels bold */
    }

    .btn-primary {
        width: 100%; /* Full-width button */
        padding: 10px; /* Padding for better touch area */
        background-color: #0056b3; /* Primary color for the button */
        border: none; /* Remove default border */
    }

        .btn-primary:hover {
            background-color: #004094; /* Darker shade on hover */
        }


    .contact-body {
        padding-top: 50px;
        background-color: #18264D;
        color: white;
        height: 510px;
    }
</style>

</style>
<div class="container contact-body">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Contact Us</h2>

            @if (TempData["SuccessMessage"] != null) {
                <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "text-center" })) {
                <div class="form-group text-center">
                    <label for="email">Email</label>
                    <input type="email" class="form-control text-center" id="email" name="email" required>
                </div>

                <div class="form-group text-center">
                    <label for="message">Message</label>
                    <textarea class="form-control text-center" id="message" name="message" rows="5" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Send email to SoBee You!</button>
            }
        </div>
    </div>
</div>