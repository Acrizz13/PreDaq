	@section Scripts {
		<script>
			$(document).ready(function () {
				$.ajax({
					url: '@Url.Action("Get5StarReviews", "Home")',
					type: 'GET',
					success: function (data) {
						var $carousel = $('#reviewsCarouselContainer');
						var reviewsHtml = '<div id="reviewsCarousel" class="carousel slide" data-ride="carousel">';
						reviewsHtml += '<div class="carousel-inner">';

						data.forEach(function (review, index) {
							var activeClass = index === 0 ? 'active' : '';
							reviewsHtml += '<div class="carousel-item ' + activeClass + '">' +
								'<div class="card review-card">' +
								'<div class="card-body">' +
								'<div class="review-rating">';

							for (var i = 0; i < 5; i++) {
								var starClass = i < review.rating ? 'fas fa-star' : 'fas fa-star';
								reviewsHtml += '<i class="' + starClass + '"></i>';
							}

							reviewsHtml += '</div>' +
								'<p class="card-text review-text">' + review.reviewText + '</p>' +
								'<p class="card-text review-author">' + review.userFirstName + '</p>' +
								'</div>' +
								'</div>' +
								'</div>';
						});

						reviewsHtml += '</div>';
						reviewsHtml += '<a class="carousel-control-prev" href="#reviewsCarousel" role="button" data-slide="prev">' +
							'<span class="carousel-control-prev-icon" aria-hidden="true"></span>' +
							'<span class="sr-only">Previous</span>' +
							'</a>' +
							'<a class="carousel-control-next" href="#reviewsCarousel" role="button" data-slide="next">' +
							'<span class="carousel-control-next-icon" aria-hidden="true"></span>' +
							'<span class="sr-only">Next</span>' +
							'</a>';
						reviewsHtml += '</div>';

						$carousel.html(reviewsHtml);
						$('#reviewsCarousel').carousel();
					},
					error: function () {
						console.log('Error fetching reviews');
					}
				});
			});

			function formatDate(dateString) {
				var date = new Date(dateString);
				var options = { year: 'numeric', month: 'long', day: 'numeric' };
				return date.toLocaleDateString(undefined, options);
			}
		</script>
	}
