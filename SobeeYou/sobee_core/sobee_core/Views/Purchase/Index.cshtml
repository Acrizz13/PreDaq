<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Web App</title>
    <link href="~/css/PurchaseStyles.css" rel="stylesheet" type="text/css" />
</head>

@section Purchase {
    <section id="collection">
        <div class="cs-custom-container">
            <div class="cs-sidebar">
                <h3>Filters</h3>
                <div class="cs-filter">
                    <h4>Category</h4>
                    <ul>
                        <li><a href="#">Category 1</a></li>
                        <li><a href="#">Category 2</a></li>
                        <li><a href="#">Category 3</a></li>
                    </ul>
                </div>
                <div class="cs-filter">
                    <h4>Price Range</h4>
                    <input type="range" min="0" max="100" value="50" class="cs-price-range">
                    <div class="cs-price-label">
                        <span class="cs-min-price">$0</span>
                        <span class="cs-max-price">$100</span>
                    </div>
                </div>
                <div class="cs-filter">
                    <h4>Rating</h4>
                    <div class="cs-rating-filter">
                        <input type="checkbox" id="rating-5" name="rating" value="5">
                        <label for="rating-5">5 stars</label>
                    </div>
                    <div class="cs-rating-filter">
                        <input type="checkbox" id="rating-4" name="rating" value="4">
                        <label for="rating-4">4 stars and above</label>
                    </div>
                    <div class="cs-rating-filter">
                        <input type="checkbox" id="rating-3" name="rating" value="3">
                        <label for="rating-3">3 stars and above</label>
                    </div>
                </div>
                <div class="cs-sorting">
                    <h4>Sort By</h4>
                    <select class="cs-sort-select">
                        <option value="price-asc">Price: Low to High</option>
                        <option value="price-desc">Price: High to Low</option>
                        <option value="rating-desc">Rating: High to Low</option>
                    </select>
                </div>
            </div>
            <div class="cs-main-content">
                <div class="cs-listing">
                    <!-- displays all products in catalog and their info -->
                    @foreach (var item in Model) {
                        <form class="cs-item-form" data-product-id="@item.intProductID" data-product-name="@item.strName" data-product-price="@item.decPrice" data-product-stock="@item.strStockAmount">
                            <div class="cs-item">
                                <div class="cs-image">
                                    <img src="@Url.Content("~/Images/Products/" + item.strName.Replace(" ", "") + ".jpg")" alt="Product Image" style="width:100%; height:auto;">
                                </div>
                                <div class="cs-details">
                                    <!-- hyperlink to go to details page -->
                                    <h3 class="cs-name">
                                        <a href="@Url.Action("Details", new { id = item.intProductID })">@item.strName</a>
                                    </h3>
                                    <div class="cs-rating">
                                        <!-- calculate rating from db data and add functionality -->
                                        @*@for (int i = 1; i <= 5; i++) {
                                if (i <= item.intRating) {*@
                                        <span class="star filled">&#9733;</span>
                                        <span class="star filled">&#9733;</span>
                                        @*}
                                else {*@
                                        @*<span class="star">&#9734;</span>*@
                                        @*}
                                }*@
                                    </div>
                                    <div class="cs-actions">
                                        <span class="cs-price">Price: @item.decPrice.ToString("C")</span>
                                    </div>
                                </div>
                                <div class="cs-actions">
                                    <!-- dropdown 1-9 -->
                                    <select class="quantity-dropdown" name="quantity">
                                        @for (int i = 1; i <= 9; i++) {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                    <button type="submit" class="add-to-cart-btn">Add to Cart</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </section>
}