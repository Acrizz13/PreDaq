@model sobee_core.Models.ProductDTO

@{
	Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a layout file. Adjust the path if necessary.
	ViewBag.Title = "Product Details";
}

<div class="container">
	<h2>@Model.strName</h2>
	<p>Price: @Model.decPrice.ToString("C")</p>
	<img src="@Url.Content("~/Content/ProductImages/" + Model.strName.Replace(" ", "") + ".jpg")" alt="@Model.strName" style="width: 33%; height: auto;" />

	<!-- Display success or error message -->
	@if (TempData["SuccessMessage"] != null) {
		<div class="alert alert-success">
			@TempData["SuccessMessage"]
		</div>
	}
	@if (TempData["ErrorMessage"] != null) {
		<div class="alert alert-danger">
			@TempData["ErrorMessage"]
		</div>
	}

	<!-- Add to Cart Form -->
	<form class="cs-item-form" data-product-id="@Model.intProductID" data-product-name="@Model.strName" data-product-price="@Model.decPrice" data-product-stock="@Model.strStockAmount">
		@Html.AntiForgeryToken()
		<input type="hidden" name="Model.intProductID" value="@Model.intProductID" />
		<label for="quantity">Quantity:</label>
		<div class="cs-actions">

			<select class="quantity-dropdown" name="quantity">
				@for (int i = 1; i <= 10; i++) {
					<option value="@i">@i</option>
				}
			</select>

			<button type="submit" class="add-to-cart-btn">Add to Cart</button>
		</div>
	</form>
</div>