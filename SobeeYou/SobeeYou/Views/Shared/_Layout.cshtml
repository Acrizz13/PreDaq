<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - SoBee You!</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

	<script src="~/Scripts/dynamicShoppingCart.js"></script> <!-- Include the JavaScript file -->

	<style>
		/* Custom Navigation Bar Styles */
		.navbar-custom {
			background-color: #ff8c00; /* Orange background */
			color: #ff69b4; /* Pink text */
		}

			.navbar-custom .navbar-brand,
			.navbar-custom .nav-link {
				color: #ff69b4; /* Pink text for links */
			}

				.navbar-custom .nav-link:hover {
					color: #ffffff; /* Lighter shade or different color on hover */
				}
	</style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark navbar-custom">
		<div class="container">

            <!-- bootstrap positioning styles in class-->
			<span class="navbar-text position-absolute top-0 end-0">
				<!-- Shopping cart icon or text -->
				<a href="#" class="nav-link text-light">
					<i>@Html.ActionLink("Cart", "Index", "ShoppingCart", new { area = "" }, new { @class = "nav-link" })</i>

					<!-- If you have dynamic content to display the number of items in the cart, you can include it here -->
					<span id="cartItemCount">0</span>
				</a>
			</span>

			@Html.ActionLink("Sobee You", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			<button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
				<ul class="navbar-nav flex-grow-1">
					<li>@Html.ActionLink("About the Founders", "Index", "About", new { area = "" }, new { @class = "nav-link" })</li>
					<li>@Html.ActionLink("Purchase Our Beverages", "Index", "Purchase", new { area = "" }, new { @class = "nav-link" })</li>
					<li>@Html.ActionLink("Account", "Index", "Account", new { area = "" }, new { @class = "nav-link" })</li>
				</ul>
			</div>
		</div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
