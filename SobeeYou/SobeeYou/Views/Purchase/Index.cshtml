<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Your Web App</title>
	<link href="~/Content/stylesheets/PurchaseStyles.css" rel="stylesheet" type="text/css" />
</head>

<div class="container body-content">
	<section id="collection">
		<div class="cs-container">
			<div class="cs-listing">
				@foreach (var item in Model) {
					<form class="cs-item-form" data-product-id="@item.intProductID" data-product-name="@item.strName" data-product-price="@item.decPrice" data-product-stock="@item.strStockAmount">
						<div class="cs-item">
							<div class="cs-details">
								<h3 class="cs-name">@item.strName</h3>
								<div class="cs-actions">
									<span class="cs-price">Price: @item.decPrice.ToString("C")</span>
									<span class="cs-stock">Stock Amount: @item.strStockAmount</span>
								</div>
							</div>
							<div class="cs-image">
								<img src="@Url.Content("~/Content/ProductImages/" + item.strName.Replace(" ", "") + ".jpg")" alt="Product Image" style="width:100px; height:auto;">
							</div>
							<div class="cs-actions">
								<select class="quantity-dropdown" name="quantity">
									@for (int i = 1; i <= 9; i++) {
										<option value="@i">@i</option>
									}
								</select>
								<button type="submit" class="add-to-cart-btn">Add to Cart</button>
							</div>
						</div>
					</form>
				}
			</div>
		</div>
	</section>
</div>
