<h2>Purchase Our Beverages</h2>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .quantity-dropdown {
        padding: 4px;
        margin-right: 10px;
    }
</style>

<table>
    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Stock Amount</th>
        <th>Image</th>
        <th>Action</th> <!-- Added for "Add to Cart" button -->
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.intProductID</td>
            <td>@item.strName</td>
            <td>@item.strPrice</td>
            <td>@item.strStockAmount</td>
            <td>
                <img src="@Url.Content("~/Content/ProductImages/" + item.strName.Replace(" ", "") + ".jpg")" alt="Product Image" style="width:100px; height:auto;">
            </td>
            <td>
                <!-- Quantity Dropdown -->
                <select class="quantity-dropdown" name="quantity" form="form@item.intProductID">
                    @for (int i = 1; i <= 9; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>

                <!-- Add to Cart Button -->
                <form id="form@item.intProductID" action="/Cart/Add" method="post">
                    <input type="hidden" name="productId" value="@item.intProductID" />
                    <input type="submit" value="Add to Cart" />
                </form>
            </td>
        </tr>
    }
</table>
