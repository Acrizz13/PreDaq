@model IEnumerable<SobeeYou.Models.ProductsModel>

<h2>Purchase Our Beverages</h2>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }
</style>

<table>
    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Stock Amount</th>
        <th>Image</th> e4
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.intProductID</td>
            <td>@item.strName</td>
            <td>@item.strPrice</td>
            <td>@item.strStockAmount</td>
            <td>
                <!-- Ensure the product name is URL-friendly if used as a filename -->
                <img src="@Url.Content("~/Content/ProductImages/" + item.strName.Replace(" ", "") + ".jpg")" alt="Product Image" style="width:100px; height:auto;">
            @*//put a button here to add to cart - make it connected to the product id
            // we probably want to hide the product id from the user but keep it in the form*@
            </td>

        </tr>
    }
</table>
