@model SobeeYou.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account</title>
    <link rel="stylesheet" href="~/Content/styles.css">
</head>
<body>
    <div class="login-container">
        <h1>Create an account</h1>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.strFirstName)
                @Html.EditorFor(model => model.strFirstName, new { htmlAttributes = new { @class = "form-control", @id = "firstname" } })
                @Html.ValidationMessageFor(model => model.strFirstName)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.strLastName)
                @Html.EditorFor(model => model.strLastName, new { htmlAttributes = new { @class = "form-control", @id = "lastname" } })
                @Html.ValidationMessageFor(model => model.strLastName)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.strEmail)
                @Html.EditorFor(model => model.strEmail, new { htmlAttributes = new { @class = "form-control", @id = "email" } })
                @Html.ValidationMessageFor(model => model.strEmail)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.strPassword)
                @Html.EditorFor(model => model.strPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @id = "password" } })
                @Html.ValidationMessageFor(model => model.strPassword)
            </div>

            <button type="submit" class="login-button">SIGN UP</button>
        }

        <div class="login-footer">
            <p>Returning Customer? <a href="@Url.Action("Index", "Account")">Login</a></p>
        </div>
    </div>
</body>
</html>
