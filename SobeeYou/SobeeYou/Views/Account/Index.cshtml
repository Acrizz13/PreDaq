<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="login-container">
        <h1>Login</h1>
        <!-- Update the action attribute to use the Url.Action helper -->
        <form action="@Url.Action("Login", "Account")" method="post">
            <div class="form-group">
                <label for="email">Email address*</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password*</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" class="login-button">LOGIN</button>
            <div class="login-footer">
                <!-- These links will use the Url.Action helper to generate the correct URL -->
                <a href="@Url.Action("ForgotPassword", "Account")">Forgot your password?</a>
                <a href="@Url.Action("Register", "Account")">New Customer? Sign up</a>
            </div>
        </form>
    </div>
</body>
</html>
